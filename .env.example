# Application Configuration
NODE_ENV=production
PORT=3000
LOG_LEVEL=info

# Database Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=feedvex
POSTGRES_USER=feedvex
POSTGRES_PASSWORD=your_secure_password_here

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password_here

# Reddit API Configuration
# Get credentials from https://www.reddit.com/prefs/apps
REDDIT_CLIENT_ID=your_reddit_client_id
REDDIT_CLIENT_SECRET=your_reddit_client_secret
REDDIT_USER_AGENT=Feedvex/1.0 (by /u/your_username)

# Reddit Collection Settings
REDDIT_SUBREDDITS=programming,technology,science,webdev,javascript
COLLECTION_INTERVAL_MS=3600000
MAX_POSTS_PER_SUBREDDIT=100
CONCURRENT_REQUESTS=5

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Cache Configuration
CACHE_TTL_SECONDS=300
CACHE_MAX_SIZE=1000

# Ranking Configuration
RANKING_ALGORITHM=bm25
BM25_K1=1.2
BM25_B=0.75
RECENCY_WEIGHT=0.2
POPULARITY_WEIGHT=0.3
ENGAGEMENT_WEIGHT=0.1
RELEVANCE_WEIGHT=0.4

# Search Configuration
DEFAULT_PAGE_SIZE=10
MAX_PAGE_SIZE=100
SNIPPET_CONTEXT_LENGTH=50

# Monitoring Configuration
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001
GRAFANA_USER=admin
GRAFANA_PASSWORD=admin

# CORS Configuration
CORS_ORIGINS=*

# Security
# Generate a secure secret: openssl rand -base64 32
JWT_SECRET=your_jwt_secret_here
SESSION_SECRET=your_session_secret_here
