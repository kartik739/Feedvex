# ============================================================================
# BACKEND ENVIRONMENT VARIABLES
# ============================================================================

# Application Configuration
# NODE_ENV: Application environment (development, production, test)
NODE_ENV=production

# PORT: Port number for the backend API server
PORT=3000

# LOG_LEVEL: Logging level (error, warn, info, debug, verbose)
LOG_LEVEL=info

# Database Configuration (PostgreSQL)
# POSTGRES_HOST: PostgreSQL server hostname or IP address
POSTGRES_HOST=localhost

# POSTGRES_PORT: PostgreSQL server port
POSTGRES_PORT=5432

# POSTGRES_DB: Name of the PostgreSQL database
POSTGRES_DB=feedvex

# POSTGRES_USER: PostgreSQL database user
POSTGRES_USER=feedvex

# POSTGRES_PASSWORD: PostgreSQL database password
POSTGRES_PASSWORD=your_secure_password_here

# Redis Configuration
# REDIS_HOST: Redis server hostname or IP address
REDIS_HOST=localhost

# REDIS_PORT: Redis server port
REDIS_PORT=6379

# REDIS_PASSWORD: Redis server password (leave empty if no password)
REDIS_PASSWORD=your_redis_password_here

# Reddit API Configuration
# Get credentials from https://www.reddit.com/prefs/apps (optional for public API)
# REDDIT_CLIENT_ID: Reddit API client ID (optional)
REDDIT_CLIENT_ID=

# REDDIT_CLIENT_SECRET: Reddit API client secret (optional)
REDDIT_CLIENT_SECRET=

# REDDIT_USER_AGENT: User agent string for Reddit API requests
REDDIT_USER_AGENT=Feedvex/1.0 (Reddit Search Engine)

# Reddit Collection Settings
# REDDIT_SUBREDDITS: Comma-separated list of subreddits to collect posts from
REDDIT_SUBREDDITS=programming,technology,science,webdev,javascript,python,machinelearning

# REDDIT_MAX_POSTS_PER_SUBREDDIT: Maximum number of posts to collect per subreddit per run
REDDIT_MAX_POSTS_PER_SUBREDDIT=100

# REDDIT_COLLECTION_INTERVAL_HOURS: Hours between collection runs (default: 6 hours)
REDDIT_COLLECTION_INTERVAL_HOURS=6

# COLLECTION_INTERVAL_MS: Interval between collection runs in milliseconds (deprecated - use REDDIT_COLLECTION_INTERVAL_HOURS)
COLLECTION_INTERVAL_MS=21600000

# MAX_POSTS_PER_SUBREDDIT: Maximum number of posts to collect per subreddit per run (deprecated - use REDDIT_MAX_POSTS_PER_SUBREDDIT)
MAX_POSTS_PER_SUBREDDIT=100

# CONCURRENT_REQUESTS: Number of concurrent requests to Reddit API
CONCURRENT_REQUESTS=5

# Rate Limiting Configuration
# RATE_LIMIT_WINDOW_MS: Time window for rate limiting in milliseconds
RATE_LIMIT_WINDOW_MS=60000

# RATE_LIMIT_MAX_REQUESTS: Maximum number of requests allowed per window
RATE_LIMIT_MAX_REQUESTS=100

# Cache Configuration
# CACHE_TTL_SECONDS: Time-to-live for cached items in seconds
CACHE_TTL_SECONDS=300

# CACHE_MAX_SIZE: Maximum number of items to store in cache
CACHE_MAX_SIZE=1000

# Ranking Configuration
# RANKING_ALGORITHM: Algorithm to use for ranking posts (bm25, tfidf)
RANKING_ALGORITHM=bm25

# BM25_K1: BM25 term frequency saturation parameter (typically 1.2-2.0)
BM25_K1=1.2

# BM25_B: BM25 document length normalization parameter (0.0-1.0)
BM25_B=0.75

# TEXT_WEIGHT: Weight for text relevance in ranking (0.0-1.0)
TEXT_WEIGHT=0.4

# RECENCY_WEIGHT: Weight for post recency in ranking (0.0-1.0)
RECENCY_WEIGHT=0.2

# POPULARITY_WEIGHT: Weight for post popularity (upvotes) in ranking (0.0-1.0)
POPULARITY_WEIGHT=0.3

# ENGAGEMENT_WEIGHT: Weight for post engagement (comments) in ranking (0.0-1.0)
ENGAGEMENT_WEIGHT=0.1

# RELEVANCE_WEIGHT: Weight for relevance score in ranking (0.0-1.0)
# Note: All weights should sum to 1.0
RELEVANCE_WEIGHT=0.0

# RECENCY_DECAY_DAYS: Number of days for recency decay calculation
RECENCY_DECAY_DAYS=7

# Search Configuration
# DEFAULT_PAGE_SIZE: Default number of results per page
DEFAULT_PAGE_SIZE=10

# MAX_PAGE_SIZE: Maximum number of results per page
MAX_PAGE_SIZE=100

# SNIPPET_CONTEXT_LENGTH: Number of characters to include in search result snippets
SNIPPET_CONTEXT_LENGTH=50

# Monitoring Configuration
# PROMETHEUS_PORT: Port for Prometheus metrics endpoint
PROMETHEUS_PORT=9090

# GRAFANA_PORT: Port for Grafana dashboard
GRAFANA_PORT=3001

# GRAFANA_USER: Grafana admin username
GRAFANA_USER=admin

# GRAFANA_PASSWORD: Grafana admin password
GRAFANA_PASSWORD=admin

# CORS Configuration
# CORS_ORIGINS: Allowed origins for CORS (comma-separated or * for all)
CORS_ORIGINS=*

# Security
# Generate a secure secret: openssl rand -base64 32
# JWT_SECRET: Secret key for JWT token signing
JWT_SECRET=your_jwt_secret_here

# SESSION_SECRET: Secret key for session encryption
SESSION_SECRET=your_session_secret_here

# ============================================================================
# FRONTEND ENVIRONMENT VARIABLES
# ============================================================================
# Note: Frontend variables must be prefixed with VITE_ to be exposed to the client

# VITE_API_URL: Backend API base URL for the frontend to connect to
VITE_API_URL=http://localhost:3000/api/v1

# VITE_APP_NAME: Application name displayed in the frontend
VITE_APP_NAME=Feedvex

# VITE_APP_VERSION: Application version displayed in the frontend
VITE_APP_VERSION=1.0.0

# VITE_SENTRY_DSN: Sentry DSN for frontend error tracking (optional)
# VITE_SENTRY_DSN=your_sentry_dsn_here

# VITE_GA_ID: Google Analytics tracking ID (optional)
# VITE_GA_ID=your_google_analytics_id_here
